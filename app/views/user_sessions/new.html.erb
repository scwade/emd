<!-- new user account -->
<h3 class="labelPageTitle"><dfn>New - User Session<dfn></h3>


<div class="formLayout10">
  <% form_for(@user_session) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>

  <p><%= link_to "Forgot password?", new_password_reset_path %></p>  
  
  <h4>Or use OpenID</h4>

  <p>
    <%= f.label :openid_identifier, "OpenID URL" %><br />
    <%= f.text_field :openid_identifier %>
  </p>

  <p>
    <%= f.submit 'Submit', :confirm => 'Are you sure?' %>&nbsp;
    <%= f.submit "Reset", :type => "reset",  :confirm => 'Are you sure?'%>
  </p>

  <% end %>
</div><!-- end of tableLayout -->

<%= link_to 'Index', users_path, :class => "navLink" %>
<!-- end of new session -->
