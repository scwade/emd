<!-- new.html.erb -->
<div class="labelPageTitle">
    <p>New - User Session</p>
</div>

<div class="tableLayout">
  <% form_for(@user_session) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  
  <br /><%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <p><%= f.submit "Submit" %></p>
  <p><%= link_to "Forgot password?", new_password_reset_path %></p>  
  
  <h2>Or use OpenID</h2>
  <p>
    <%= f.label :openid_identifier, "OpenID URL" %><br />
    <%= f.text_field :openid_identifier %>
  </p>
  <p><%= f.submit "Submit" %></p>

  <% end %>
</div><!-- end of tableLayout -->

<div class="navLink">
    <%= link_to 'Cancel', users_path, :confirm => 'Are you sure?' %>
</div><!-- end of link -->
