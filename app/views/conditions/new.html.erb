<h1>New condition</h1>

<% form_for(@condition) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :pmd_patient_no %><br />
    <%= f.text_field :pmd_patient_no %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :treated_by %><br />
    <%= f.text_field :treated_by %>
  </p>
  <p>
    <%= f.label :treat_notes %><br />
    <%= f.text_area :treat_notes, :rows => 3 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', conditions_path %>
