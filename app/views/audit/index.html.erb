<!-- index.html.erb -->
<% javascript 'show_record' %>
<div class="floatLeftLabelPageTitle marginBottom20">
    <p>Audit Records</p>
</div>

<div class="indent30 marginBottom clearBoth" style="width: 30em; font-size: 1.1em;">
  <% form_tag('/audit/show_filter/1', :method=>:put) do %>
    <fieldset style="background-color: #ECF0F9;">
      <legend>Filter Audit Records</legend>

      <div style="margin-bottom: .4em;">
        <label for="userid" style="width: 8em; float: left;">User id:</label>
          <%= text_field_tag :user_id, params[:user_id] ,:size => 10 %>
      </div>

      <div>
        <%= submit_tag "Show Filtered Records" %>
      </div>
    </fieldset>
  <% end %>
</div>

<%= render :partial => "audit" %>
