<!-- Begin Audit Show -->
<h1>Audit Record</h1>

<div>
  <table class="X3" rules="fixed">
    <tbody>
      <tr>
        <th> Id              </th>
        <th> Auditable id    </th>
        <th> Auditable type  </th>
        <th> User id         </th>
        <th> User type       </th>
        <th> Username        </th>
        <th> Action          </th>
        <th> Version         </th>
        <th> Created at      </th>
      </tr>
  
      <% audit = @audit %>
      <tr>
        <td><%= h audit.id              %></td>
        <td><%= h audit.auditable_id    %></td>
        <td><%= h audit.auditable_type  %></td>
        <td><%= h audit.user_id         %></td>
        <td><%= h audit.user_type       %></td>
        <td><%= h audit.username        %></td>
        <td><%= h audit.action          %></td>
        <td><%= h audit.version         %></td>
        <td><%= h audit.created_at      %></td>
      </tr>
    </tbody>
  </table>
<br />
<h2>Attribute Changes</h2>
<div id="mainScrollableWindow" style="background-color: #ECF0F9;">
<br />
    <!-- Show Changes -->
    <% audit.changes.each do |k,v| %>
      <% if audit.action == "update" %>
        <div style="width: 80px; position: relative; float: left; margin-right: 5px;  font: 16px/5px bold;    text-align: right;" >Attribute:         </div>
        <div style="             position: relative; float: left; margin-left:  5px;  font: 16px/5px bold;"                       ><%= k %>           </div><br />
        <div style="width: 80px; position: relative; float: left; margin-right: 5px;  font: 12px/5px lighter; text-align: right;" >From:              </div>
        <div style="             position: relative; float: left; margin-left:  5px;  font: 12px/5px lighter;                   " ><%= v.first.to_s %></div><br />
        <div style="width: 80px; position: relative; float: left; margin-right: 5px;  font: 12px/5px lighter; text-align: right;" >To:                </div>
        <div style="             position: relative; float: left; margin-left:  5px;  font: 12px/5px lighter;"                    ><%= v.last.to_s %> </div><br />
      <% else %>
        <div style="width: 80px; position: relative; float: left; margin-right: 5px;  font: 16px/5px bold;    text-align: right;" >Attribute:         </div>
        <div style="             position: relative; float: left; margin-left:  5px;  font: 16px/5px bold;"                       ><%= k %>           </div><br />
        <div style="width: 80px; position: relative; float: left; margin-right: 5px;  font: 12px/5px lighter; text-align: right;" >New:               </div>
        <div style="             position: relative; float: left; margin-left:  5px;  font: 12px/5px lighter;                   " ><%= v.to_s %>      </div><br />
      <% end %>
    <% end %>
</div>
</div>
    
<br />

<%= link_to 'Index',   audit_index_path  %>

<!-- End Audit show -->
