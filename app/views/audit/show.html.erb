<!-- Begin Audit Show -->
<h1>Audit Record</h1>

<div id="mainScrollableWindow">
  <table class="X3" rules="fixed">
    <tbody>
      <tr>
        <th> Id              </th>
        <th> Auditable id    </th>
        <th> Auditable type  </th>
        <th> User id         </th>
        <th> User type       </th>
        <th> Username        </th>
        <th> Action          </th>
        <th> Changes         </th>
        <th> Version         </th>
        <th> Created at      </th>
      </tr>
  
      <% audit = @audit %>
      <tr>
        <td><%= h audit.id              %></td>
        <td><%= h audit.auditable_id    %></td>
        <td><%= h audit.auditable_type  %></td>
        <td><%= h audit.user_id         %></td>
        <td><%= h audit.user_type       %></td>
        <td><%= h audit.username        %></td>
        <td><%= h audit.action          %></td>
    
        <td><%= h truncate(audit.changes.to_s, :length => 60 ) %></td>
    
        <td><%= h audit.version          %></td>
        <td><%= h audit.created_at       %></td>
  
        <td><%= link_to 'Index',   audit_index_path  %></td>
      </tr>
    </tbody>
  </table>
</div><!-- end of mainScrollWindow -->
    
<br />
<!-- End Audit show -->
