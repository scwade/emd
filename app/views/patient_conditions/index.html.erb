<h1>Listing of Patient Conditions</h1>
  <table class="X3"rules="none" border="1">
  <tr>
    <th>PC id</th>
    <th>PP id</th>
    <th>Condition id</th>
    <th>Condition name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Treated by</th>
    <th>Treat notes</th>
  </tr>

<% @patient_conditions.each do |patient_condition| %>
  <tr>
    <td><%=h patient_condition.id %></td>
    <td><%=h patient_condition.patient_profile_id %></td>
    <td><%=h id = patient_condition.condition_id %></td>
    <td><%= h Condition.find(id).name %></td>
    <td><%=h patient_condition.start_date %></td>
    <td><%=h patient_condition.end_date %></td>
    <td><%=h patient_condition.treated_by %></td>
    <td><%=h patient_condition.treat_notes %></td>
    <td><%= link_to 'Show', patient_condition %></td>
    <td><%= link_to 'Edit', edit_patient_condition_path(patient_condition) %></td>
    <td><%= link_to 'Destroy', patient_condition, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

