<div class="depot-form">
<h1>New patient_condition</h1>
<% form_for(@patient_condition) do |f| %>

  <%= f.error_messages %>
  <p>
    <%= f.label :condition_name %><br />
    <%= f.select :condition_id, @conditions.collect{ |c| [c.name, c.id] } %>
  </p>

   <p>
    <%= f.label :patient_name %><br />
    <%= f.select :patient_profile_id, @patient_profiles.collect{ |pp| [pp.first_name, pp.id] } %>
  </p>

  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :treated_by %><br />
    <%= f.text_field :treated_by %>
  </p>
  <p>
    <%= f.label :treat_notes %><br />
    <%= f.text_field :treat_notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', patient_conditions_path %>
</div>

